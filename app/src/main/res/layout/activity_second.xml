<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/qrCodeImageView"
        android:layout_width="125dp"
        android:layout_height="100dp"
        android:contentDescription="@string/qr_code_image"
        android:scaleType="centerCrop"
        android:src="@drawable/qr_code_placeholder" />

    <ImageView
        android:id="@+id/fotoImageView"
        android:layout_width="144dp"
        android:layout_height="114dp"
        android:contentDescription="@string/foto_image"
        android:scaleType="centerCrop"
        android:src="@drawable/qr_code_placeholder" />

    <TextView
        android:id="@+id/raTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        tools:text="RA: 123456" />

    <TextView
        android:id="@+id/localizacaoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        tools:text="Latitude: 123.456, Longitude: 789.012" />

    <ImageView
        android:id="@+id/photoImageView"
        android:layout_width="247dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/foto_image"
        android:src="@drawable/ic_photo_placeholder" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:text="@string/location_placeholder" />


</LinearLayout>
